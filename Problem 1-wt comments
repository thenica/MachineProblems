	//Input the scores of 50 students in their quiz 1 
	cout<<"Enter grades for Quiz1";
    for (x = 0; x < 50; x++)
    {
        cout << x + 1<<": "<<names[x]<<": \t\t";
        cin >> quiz1[x];
        if (quiz1[x]>100 || quiz1[x]<0)
        {
        	cout<<"Invalid";
