	int sumquizzes[50];
	float quizper[50];
	int sumexams[50];
	float examper[50];
	int sumsw[50];
	float swper[50];
	float finalgrade[50];
	char arr[50];
	float temp;

int main()
{
	cout << "Academic Class Record\n\n ";
