		sumquizzes[x] = quiz1[x] + quiz2[x] + quiz3[x] + quiz4[x];
		quizper[x] = sumquizzes[x]*0.15;     // each quiz has a weight of 15%
	}
	
	// Class standing equivalent to 5% of the total grade
	// Class standing grade is added on the top of the final grades of the students 
	
	// Class Standing Component 1: NOTEBOOK over 100
	for (x = 0; x < 50; x++)
	{
		ntbkper[x] = ntbk[x]*0.01;    //Notebook is equivalent to 1%
	}
	// Class Standing component 2: SEAT WORKS 
	//Total of 10 seatworks is given to each students
	// One seatwork is total to 10 points 
	for (x = 0; x < 50; x++)
