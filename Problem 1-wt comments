	//The corresponding grade point average (GPA) of each students based on the transmutation table
	for (x = 0; x < 50; x++)
	{
		cout<<"The Final Grade of " << "= " << "\n";
		if(finalgrade[x] > 95.57 && 105 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 95.57 to 100
			cout << "1.0"; 
		}
		else if(finalgrade[x] > 91.12 && 95.56 > finalgrade[x])
