		{
			// Corresponding GPA of students with a raw grade between 82.23 to 86.67
			cout<<"1.75";
		}
		else if(finalgrade[x] > 77.79 && 82.22 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 77.79 to 82.22
			cout<<"2.00";
		}
		else if(finalgrade[x] > 73.34 && 77.78 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 73.34 to 77.78
			cout<<"2.25";
		}
		else if(finalgrade[x] > 68.90 && 73.33 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 68 to 73.33
			cout<<"2.50";
		}
		else if(finalgrade[x] > 64.45 && 68.89 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 64.45 to 68.89
			cout<<"2.75";
		}
		else if(finalgrade[x] > 60.00 && 64.44 > finalgrade[x])
		{
			// Corresponding GPA of students with a raw grade between 60.00 to 64.44
			cout<<"3.00";
		}
	}
	// Displays whether a student passed or failed the subject
	for (x = 0; x < 50; x++)
	{
		if (finalgrade[x] > 60.00)
		cout << "PASSED";
		if (finalgrade[x] < 60.00)
		cout << "FAILED";
	}
	// To determine who are the top 10 performing students in the class
		//Selection sort is used to determine the top 10 performing students in the class
	for(x = 0; x < 50; x++)
    {
        for(y = x + 1; y < 50; y++)
        {
            if(finalgrade[x] > finalgrade[y])	
            {
            	    temp = finalgrade[x];
        			finalgrade[x] = finalgrade[y];
        			finalgrade[y] = temp;
            }
        }
    }
	// Display the top 10 performing students in the class with their final grade
	cout << "Top 10 list";  
	for(x = 0; x < 10; x++)
	{
		cout << finalgrade[x] << "\n";
	}
	return 0;
